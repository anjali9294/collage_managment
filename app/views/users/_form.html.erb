<div class="container">

  <div class="row justify-content-center">
    <div class="col-10 ">
    <%= render 'shared/errors', obj: @user %>
      <%= form_with(model: @user,class:"shadow p-3 mb-3 bg-info rounded" ,local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :username, class:"col-2 col-form-label text-white " %>
          <div class="col-10">
          <%= f.text_field :username, class: "form-control shadow rounded",placeholder:"enter a username" %>
          </div>
        </div>
        <br/>
        <div class="form-group row">
          <%= f.label :email ,class:"col-2 col-form-label text-white"%>
          <div class="col-10">
          <%= f.email_field :email,rows: 10,class: "form-control shadow rounded",placeholder:"email address" %>
          </div>
        </div>
        <br/>
        <div class="form-group row">
          <%= f.label :password ,class:"col-2 col-form-label text-white"%>
          <div class="col-10">
          <%= f.password_field :password,rows: 10,class: "form-control shadow rounded",placeholder:"choose password" %>
          </div>
        </div>

        <div class = "text-center mt-3">
          <%= f.submit(@user.new_record? ? "Sign up" : "Update account",class:"btn btn-outline-primary") %>
         
        </div>

      <% end %>
      
    </div>
      
  </div>
</div>