

<div class="container">

  <div class="row justify-content-center">
    <div class="col-10 ">
    <%= render 'shared/errors' , obj:@student%>
      <%= form_with(model: @student,class:"shadow p-3 mb-3 bg-info rounded" ,local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :name, class:"col-2 col-form-label text-white " %>
         
          <div class="col-10">
          <%= f.text_field :name, class: "form-control shadow rounded",placeholder:"enter your name" %>
          </div>
        </div>
        <br/>
        <div class="form-group row">
          <%= f.label :roll_no ,class:"col-2 col-form-label text-white"%>
          <div class="col-10">
          <%= f.number_field :roll_no,class: "form-control shadow rounded",placeholder:"enter your roll no" %>
          </div>
        </div>
        <br/>
        <div class="form-group row">
        <%= f.label :email,class:"col-2 col-form-label text-white"%>
        <div class="col-10">
        <%= f.email_field :email,class: "form-control shadow rounded",placeholder:"enter your email" %>
        </div>
        </div>
        <br/>
        <div class="form-group row">
        <%= f.label :contact,class:"col-2 col-form-label text-white"%>
        <div class="col-10">
        <%= f.number_field :contact,class: "form-control shadow rounded",placeholder:"Contact number" %>
        </div>
        </div>
        <br/>
        <div class="form-group row">
        <%= f.label :date_of_birth ,class:"col-2 col-form-label text-white"%>
        <div class="col-10">
        <%= f.date_field :date_of_birth,class: "form-control shadow rounded",placeholder:"date of birth" %>
        </div>
        </div>
        <br/>
        <div class="form-group row">
        <%= f.label :state,class:"col-2 col-form-label text-white"%>
        <div class="col-10">
        <%= f.text_field :state,class: "form-control shadow rounded",placeholder:"enter your state" %>
        </div>
        </div>
        <br/>
        <div class="form-group row">
        <%= f.label :city ,class:"col-2 col-form-label text-white"%>
        <div class="col-10">
        <%= f.text_field :city,class: "form-control shadow rounded",placeholder:"enter your city" %>
        </div>
        </div>
        <br/>
        <div class="form-group row">
        <%= f.label :father_name ,class:"col-2 col-form-label text-white"%>
        <div class="col-10">
        <%= f.text_field :father_name,class: "form-control shadow rounded",placeholder:"your father name" %>
        </div>
        </div>
        <br/>
        <div class="form-group row">
        <%= f.label :father_occupation ,class:"col-2 col-form-label text-white"%>
        <div class="col-10">
        <%= f.text_field :father_occupation,class: "form-control shadow rounded",placeholder:"father occupation" %>
        </div>
        </div>
        <br/>
        <div class="form-group row">
        <%= f.label :mother_name ,class:"col-2 col-form-label text-white"%>
        <div class="col-10">
        <%= f.text_field :mother_name,class: "form-control shadow rounded",placeholder:"enter mother name" %>
        </div>
        </div>
        <br/>
        <div class="form-group row">
        <%= f.label :mother_occupation ,class:"col-2 col-form-label text-white"%>
        <div class="col-10">
        <%= f.text_field :mother_occupation,class: "form-control shadow rounded",placeholder:"mother occupation" %>
        </div>
        </div>
        <br/>
        <div class="form-group row">
        <%= f.label :course_id,class:"col-2 col-form-label text-white"%>
        <div class="col-10">
        <%= f.number_field :course_id,class: "form-control shadow rounded",placeholder:"course id" %>
        </div>
        </div>
     

        <div class = "text-center mt-3">
          <%= f.submit class:"btn btn-outline-primary" %>
          <%= link_to 'Back to Student', students_path ,class: "btn btn-outline-secondary"%>
        </div>

      <% end %>
      
    </div>
      
  </div>
</div>