
  <div class="container" id ="home-container">
    <div class=" color-light text-center text-white " >
      <div class="home-content">
        <div class="container">
          <div class="row">
            <div class="col col-md">
              <div class="text-left">
                <h1 class="bd-title  mt-0">College Management System <br/>Software</h1>
                <p class="bd-lead">End-to-End ERP Solution for Seamless Management of <br/>Colleges</p>
                <div class=" flex-column flex-sm-row">
                <%= link_to "Sign up!",signup_path,class:"text-center btn btn-success btn-lg " %>  
                </div>
              </div>
            </div>
            <div class="col col-md">
              <div class="row justify-content-center">
                <div class="col-12">
                  <%= form_with(scope: :session,url: login_path,class:"shadow p-3 mb-3 bg-info rounded" ,local: true) do |f| %>
                    <div class="form-group row">
                      <%= f.label :email ,class:"col-2 col-form-label text-white"%>
                      <div class="col-10">
                      <%= f.email_field :email,rows: 10,class: "form-control shadow rounded",placeholder:"email address" %>
                      </div>
                    </div>
                    <br/>
                    <div class="form-group row">
                      <%= f.label :password ,class:"col-2 col-form-label text-white"%>
                      <div class="col-10">
                      <%= f.password_field :password,rows: 10,class: "form-control shadow rounded",placeholder:"choose password" %>
                      </div>
                    </div>
                    
                    <div class = "text-center mt-3">
                      <%= f.submit "Login",class:"btn btn-success shadow rounded"%>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



